<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:autoSizeTextType="uniform"
                android:text="Diffrent Ways to Grow"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:autoSizeMaxTextSize="35sp"
                />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="15dp"
            android:layout_weight="50"
            app:cardElevation="8dp"
            >

            <TextView
                android:id="@+id/needforinvestment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:paddingTop="90dp"
                android:text="Need for Investment"
                android:textSize="24sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="15dp"
            android:layout_weight="50"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/mutual_funds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:paddingTop="90dp"
                android:text="Mutual Funds"
                android:textSize="24sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"

        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="15dp"
            android:layout_weight="50"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/share_mrket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:paddingTop="90dp"
                android:text="Share Market"
                android:textSize="24sp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="15dp"
            android:layout_weight="50"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/govt_rules"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:paddingTop="90dp"
                android:text="Govt. rules and regulations"
                android:textSize="24sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>