<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CreateProfile">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Profile"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:padding="20dp"
        android:textAlignment="center"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="75dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_up"
            android:background="@drawable/ic_baseline_person_outline_24"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/et_name_up"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:drawableStart="@drawable/ic_baseline_account_circle_24"
        android:drawablePadding="4dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Occupation"
        android:id="@+id/et_Occupation_up"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_baseline_work_24"
        android:layout_margin="4dp"
        android:padding="8dp"

        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Salary"
        android:id="@+id/et_Salary_up"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_baseline_work_24"
        android:layout_margin="4dp"
        android:padding="8dp"

        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="4dp"
        android:padding="8dp"

        android:id="@+id/et_email_up"
        android:layout_margin="4dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:drawableStart="@drawable/ic_baseline_phone"
        android:drawablePadding="4dp"
        android:padding="8dp"
        android:id="@+id/et_phone_up"
        android:layout_margin="4dp"
        android:textColor="@android:color/black"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ProgressBar_cp"
        android:visibility="invisible"
        android:layout_marginTop="10dp"/>



</LinearLayout>